.breadcrumbs.link__subcolor.sm-hide
  %ol.itemscope{ itemtype: "http://data-vocabulary.org/Breadcrumb" }
    %li
      %a{ href: "/", itemprop: "url" }
        %i.ic_home
          ホーム
    %li.underlayer
      %span.breadcrumbs-title{ itemprop: "title" }
        新規登録

%section#contents.page_signin
  %section#main_contents
    .site-main
      .page__even.lp-page__padding
        .page__col1
          .signup-head
            %h1.page-title
              アカウント新規登録
            .container
              %ul.signup-step
                %li.signup-step__status1.is-current
                  新規登録
                %li.signup-step__status3
                  登録完了
                %li.signup-step__status2
                  メールアドレスの確認
          .signup-box
            .container
              .inner
                %h2.signup-box__title
                  外部サービスで新規登録
                .signup-box__wrapper
                  .signup-box__wrapper-fb
                    %a.button-facebook{ href: "/i/auth/facebook" }
                      %span.signup-box__sns-button
                        Facebookで登録
                  %p.signup-box__notes
                    Facebookを使ってスペースマーケットにログインできます。
                    %br.sm-hide
                    ログイン以外の目的に使われることはありません。
                    %br.sm-hide
                    %a.a__underline{ href: "/about/terms" }
                      スペースマーケット利用規約
                    をお読みになり同意の上、登録へお進みください。
          .signup-box
            .container
              .inner
                %h2.signup-box__title
                  メールアドレスで新規登録
                .signup-box__wrapper-form
                  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
                    = devise_error_messages!
                    .name.clearfix
                      .field.last
                        .field-input
                          = f.text_field :last_name, autofocus: true
                        .field-label
                          = f.label "姓"
                      .field.first
                        .field-input
                          = f.text_field :first_name
                        .field-label
                          = f.label "名"
                    .field
                      .field-input
                        = f.email_field :email
                      .field-label
                        = f.label "メールアドレス"
                    .field
                      .field-input
                        = f.password_field :password, autocomplete: "off"
                      .field-label
                        = f.label "パスワード"
                    .field
                      .field-input
                        = f.password_field :password_confirmation, autocomplete: "off"
                      .field-label
                        = f.label "パスワード（確認）"
                    .field
                      .field-label.icon
                        = f.label :icon do
                          .prof-label
                            プロフィール画像
                          .box
                            .square
                              %i.fa.fa-camera
                              %p
                                ファイルを変更
                            = f.file_field :icon, class: "hidden"
                    .actions
                      = f.submit "Create Account", class: 'btn'
          .signup-box.signup-box__new-account
          .signup-box.signup-box__biz-account

